# Prisma Database URL (SQLite for local, PostgreSQL for production)
DATABASE_URL="file:./prisma/dev.db"

# NextAuth Configuration
NEXTAUTH_SECRET="change-this-to-a-random-32-character-string"
NEXTAUTH_URL="http://localhost:5000"

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OpenAI API Key for intent classification and LLM features
OPENAI_API_KEY=sk-your-openai-api-key-here

# DataForSEO API Credentials (optional - for SERP data fetching)
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# Gemini API Key (optional - for alternative LLM)
GEMINI_API_KEY=your-gemini-api-key
